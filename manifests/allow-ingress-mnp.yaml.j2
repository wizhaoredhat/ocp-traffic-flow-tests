kind: MultiNetworkPolicy
apiVersion: k8s.cni.cncf.io/v1beta1
metadata:
  namespace: {{ name_space }}
  name: allow-ingress-mnp
  labels:
    tft-tests: "{{ index }}"
  annotations:
    k8s.v1.cni.cncf.io/policy-for: {{ secondary_network_nad }}
spec:
  podSelector: {}
  ingress:
    - from:
        - podSelector: {}
      ports:
        - port: {{ ingress_port }}
          protocol: TCP
